{
  "search": {
    "apt": "apt search _",
    "brew": "brew search _",
    "pip": "pip search _",
    "npm": "npm search _",
    "gem": "gem search _"
  },
  "information": {
    "apt": "apt show _",
    "brew": "brew info _",
    "pip": "pip show _",
    "npm": "npm info _",
    "gem": "gem info _"
  },
  "install": {
    "apt": "apt install _",
    "brew": "brew install _",
    "pip": "pip install _",
    "npm": "npm install _",
    "gem": "gem install _"
  },
  "install_list": {
    "apt": "xargs -a Aptfile apt install",
    "brew": "",
    "pip": "pip install -r requirements.txt",
    "npm": "",
    "gem": ""
  },
  "install_project": {
    "apt": "# N/A",
    "brew": "# N/A",
    "pip": "# See Install from list",
    "npm": "npm install",
    "gem": "bundle install"
  },
  "uninstall": {
    "apt": "apt remove _",
    "brew": "brew uninstall _",
    "pip": "pip uninstall _",
    "npm": "npm uninstall _",
    "gem": "gem uninstall _"
  },
  "uninstall_global_all": {
    "apt": "apt remove --purge $(dpkg -l | grep '^rc' | awk '{print $2}')",
    "brew": "brew uninstall --force $(brew list)",
    "pip": "pip freeze | xargs pip uninstall -y",
    "npm": "npm ls -gp --depth=0 | awk -F/ '/node_modules/ && !/\\/npm$/ {print $NF}' | xargs npm -g uninstall",
    "gem": "gem uninstall -aIx"
  },
  "upgrade": {
    "apt": "apt upgrade _",
    "brew": "brew upgrade _",
    "pip": "pip install --upgrade _",
    "npm": "npm update -g _@latest",
    "gem": "gem update _"
  },
  "upgrade_global_all": {
    "apt": "apt upgrade",
    "brew": "brew upgrade",
    "pip": "pip list --outdated --format=json | jq '.[] | .name' | xargs -n1 pip install -U",
    "npm": "npm update -g",
    "gem": "gem update"
  },
  "list_global_installed": {
    "apt": "apt list --installed",
    "brew": "brew list",
    "pip": "pip list",
    "npm": "npm list -g --depth=0",
    "gem": "gem list"
  },
  "list_project_installed": {
    "apt": "# N/A",
    "brew": "# N/A",
    "pip": "pip freeze",
    "npm": "npm list --depth=0",
    "gem": "bundle list"
  },
  "list_global_upgradable": {
    "apt": "apt list --upgradable",
    "brew": "brew outdated",
    "pip": "pip list --outdated",
    "npm": "npm outdated -g --depth=0",
    "gem": "gem outdated"
  }
}
